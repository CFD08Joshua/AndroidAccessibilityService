<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10"
        >

        <LinearLayout
            android:id="@+id/ll_permission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/iv_checked"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@drawable/progressbar_horizontal"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/tv_permission_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_build"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/iv_checked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_accept"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>